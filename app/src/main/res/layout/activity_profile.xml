<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".join_route.Profile">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="John Doe"
        android:clickable="false"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Age: 23"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:text="From: Guadalajara"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:text="Bio: Cool Guy"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Rating:"/>

    <RatingBar
        android:id="@+id/ratingBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="4.5"
        android:clickable="false"
        android:stepSize="0.5" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:gravity="center"
        android:text="4.5/5"/>


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="See Reviews"
        android:clickable="false"
        android:layout_marginTop="50dp"
        android:onClick="seeReviews"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Become Buddies"
        android:clickable="false"
        android:layout_marginTop="25dp"
        android:onClick="becomeBuddies" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="See Their Buddies"
        android:clickable="false"
        android:layout_marginTop="25dp"
        android:onClick="seeBuddies" />


</LinearLayout>
